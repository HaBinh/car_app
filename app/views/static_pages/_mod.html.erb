<h1>Tất cả các yêu cầu</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nhãn hiệu</th>
      <th>Đời xe</th>
      <th>User</th>
      <th>Ngày nhận</th>
      <th>Ngày trả</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% get_request.each do |e| %>
      <tr>
        <td><%= Vehicle.find_by(id: e.vehicle_id).brand%></td>
        <td><%= Vehicle.find_by(id: e.vehicle_id).model %></td>
        <td><%= User.find_by(id: e.user_id).name %></td>
        <td><%= e.start_at %></td>
        <td><%= e.end_at %></td>
        <%= render 'shared/approve', object: e %>
        <%= render 'shared/deny',    object: e%>
      </tr>
    <% end %>
  </tbody>
</table>    
